        <a href="#" class="nav_logo"> <i class='bx bx-layer nav_logo-icon'></i> <span
            class="nav_logo-name">BBBootstrap</span> </a>
        <div class="nav_list">
          <a href="/dashboard" class="nav_link active"> <i class='bx bx-grid-alt nav_icon'></i> <span
