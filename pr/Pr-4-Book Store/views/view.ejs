<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('./img/book.jpeg');
            background-size: cover;
            background-color: #121212; /* Dark background fallback */
            color: #e0e0e0;
            font-family: Arial, sans-serif;
            height: 100vh;
            width: 100%;
        }

        .card {
            background-color: #1e1e1e; /* Darker card background */
            color: #e0e0e0; /* Light text */
            border: 1px solid #333;
            border-radius: 15px;
            overflow: hidden;
            transform: scale(0.95);
            opacity: 0;
            animation: fadeInUp 0.6s ease forwards;
            transition: all 0.3s ease;
        }

        .card:nth-child(even) {
            animation-delay: 0.2s;
        }

        .card:nth-child(odd) {
            animation-delay: 0.4s;
        }

        /* Hover Effects for Card */
        .card:hover {
            transform: scale(1.05) translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.8);
            background-color: #2c2c2c; /* Slightly darker on hover */
        }

        .card-title,
        .card-text {
            color: #e0e0e0;
        }

        /* Button Hover Effects */
        .btn {
            transition: all 0.3s ease;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.1);
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
        }

        .btn-danger:hover {
            background-color: #b02a37;
            transform: scale(1.1);
        }

        .btn-success {
            background-color: #28a745;
            border: none;
        }

        .btn-success:hover {
            background-color: #218838;
            transform: scale(1.1);
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
        }

        .header h1 {
            font-size: 3rem;
            color: #ffffff;
            animation: fadeInDown 1s ease;
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="header">
            <h1>View Store</h1>
            <a href="/add" class="btn btn-success btn-lg mt-3">Add New Book</a>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            <% if (alldata && alldata.length > 0) { %>
                <% alldata.forEach((val) => { %>
                    <div class="col">
                        <div class="card shadow h-100">
                            <div class="card-body">
                                <h5 class="card-title"><strong>Title:</strong>
                                    <%= val.name %>
                                </h5>
                                <p class="card-text"><strong>Author:</strong>
                                    <%= val.author %>
                                </p>
                                <p class="card-text"><strong>Pages:</strong>
                                    <%= val.pages %>
                                </p>
                                <p class="card-text"><strong>Price:</strong> â‚¹<%= val.price %>
                                </p>
                                <div class="d-flex gap-2 action-btns">
                                    <a href="/edituser?id=<%= val.id %>" class="btn btn-primary btn-sm">Edit</a>
                                    <a href="/deleteuser?id=<%= val.id %>" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center">
                    <p class="lead">No books available.</p>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
