<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View User</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            gap: 20px;
        }
        .card {
            width: 300px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .card-img {
            width: 100%;
            height: 400px;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }
        .card-body {
            padding: 20px;
        }
        .second-navbar {
          background-color: #f5f5f5;
        }

        .navbar-brand img {
            height: 40px;
        }

        .form-control {
            border-radius: 20px;
        }

        .nav-link {
            color: #333;
            font-size: 14px;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #ff4d6d;
        }

        .btn-sign-in {
            background-color: #ff4d6d;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 20px;
            transition: background-color 0.3s ease;
        }

        .btn-sign-in:hover {
            background-color: #e04458;
        }

        .search-bar {
          
        }
        .btn-sign-in {
        background-color: #ff4d6d;
        color: white;
        border: none;
        padding: 8px 20px;
        border-radius: 20px;
        transition: background-color 0.3s ease;
    }

    .btn-sign-in:hover {
        background-color: #e04458;
    }

    .form-select {
        border-radius: 10px;
    }
    </style>
</head>

<body >
    <nav class="navbar navbar-expand-lg  shadow-sm">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand" href="#">
                <img src="img/logo (2).png" alt="Logo" style="width: 150px;height: 100%;">
            </a>
    
            <!-- Toggler for Mobile View -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
    
            <!-- Navbar Content -->
            <div class="collapse navbar-collapse" id="mainNavbar">
                <!-- Left Section: Search Bar -->
                <form class="d-flex w-50 search-bar me-auto">
                    <input class="form-control me-2 rounded-pill" type="search" placeholder="Search for Movies, Events..." aria-label="Search">
                </form>
    
                <!-- Right Section -->
                <ul class="navbar-nav align-items-center">
                    <!-- City Dropdown -->
                    <li class="nav-item me-3">
                        <select id="citySelect" class="form-select rounded-pill" name="city" style="width: 150px;">
                            <option value="" disabled selected>Select a city</option>
                            <option value="mumbai">Mumbai</option>
                            <option value="delhi">Delhi</option>
                            <option value="surat">Surat</option>
                            <option value="chennai">Chennai</option>
                            <option value="kolkata">Kolkata</option>
                            <option value="bangalore">Bangalore</option>
                            <option value="hyderabad">Hyderabad</option>
                        </select>
                    </li>
    
                    <!-- Sign-In Button -->
                    <li class="nav-item me-3">
                        <a href=""><button class=" btn-sign-in  px-4">More</button></a>
                    </li>
    
              
                </ul>
            </div>
        </div>
    </nav>
    
        
    
        <!-- Secondary Navbar -->
        <nav class="second-navbar navbar navbar-expand-lg ">
            <div class="container">
                <!-- Toggler for Mobile View -->
                
    
                <!-- Navbar Links -->
                <div class="collapse navbar-collapse justify-content-between" id="secondaryNavbar">
                    <!-- Left Menu -->
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" href="#">Movies</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Stream</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Events</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Plays</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Sports</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Activities</a></li>
                    </ul>
    
                    <!-- Right Menu -->
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" href="#">ListYourShow</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Corporates</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Offers</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Gift Cards</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h2 class="text-danger fw-bold">Booked Tickets</h2>
        </div>
        <div class="card-container">
            <% record.map((val, i) => { %>
            <div class="card">
                <img src="<%= val.image %>" class="card-img" alt="User Image">
                <div class="card-body text-center">
                    <h5 class="card-title text-danger"><%= val.name %></h5>
                   
                    <p class="card-text">Movie Price: <%= val.phone %>â‚¹</p>
                    <div >
                        <a href="/deleteuser?id=<%= val.id %>" class="btn btn-sm btn-danger ">Delete</a>
                        <a href="/updateuser?id=<%= val.id %>" class="btn btn-sm btn-outline-danger">Edit</a>
                    </div>
                    
                </div>
            </div>
            <% }) %>
        </div>
        <div class="text-center mt-4">
            <a href="form" class="btn btn-outline-danger">Add New User</a>
        </div>
        
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
