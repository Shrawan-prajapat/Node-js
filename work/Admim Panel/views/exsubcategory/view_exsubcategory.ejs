<%- include('../header') %>

<div class="container-fluid py-2">
  <div class="row">
    <div class="col-12">
      <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
          <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">View category</h6>
          </div>
        </div>
        <div class="card-body px-0 pb-2">
          <div class="table-responsive p-0">
            <table class="table align-items-center mb-0">
              <thead>
                <tr>
                  <th class="text-uppercase text-dark text-xxs font-weight-bolder ">Id</th>
                  <th class="text-uppercase text-dark text-xxs font-weight-bolder  ps-2">Exsubcategory</th>
                  <th class="text-uppercase text-dark text-xxs font-weight-bolder  ps-2">Subcategory</th>
                  <th class="text-uppercase text-dark text-xxs font-weight-bolder  ps-2">Category</th>
                  <th class="text-center text-uppercase text-dark text-xxs font-weight-bolder ">Action</th>
                  <th class="text-center text-uppercase text-dark text-xxs font-weight-bolder ">Status</th>
                  <th class="text-secondary opacity-7"></th>
                </tr>
              </thead>
              <tbody>

                
                <% exsubcategory.map((exsubcat,i) => { %>
                  <tr>
                    <td>
                      <div class="d-flex px-2 py-1">
                        <div class="d-flex flex-column justify-content-center">
                          <h6 class="mb-0 text-sm"><%=++i%></h6>
                        </div>
                      </div>
                    </td>
                    <td>
                      <%= exsubcat.exsubcategory %>
                    </td>
                    <td>
                      <%= exsubcat?.subcategoryId?.subcategory %>
                    </td>
                    <td>
                      <p class="text-xs font-weight-bold mb-0"><%= exsubcat?.categoryId?.category %></p>
                    </td>
                   
                    <td class="align-middle text-center">
                      <a href="/exsubcategory/deleteexsubcategory?id=<%= exsubcat?.id %>"
                        class="btn btn-danger btn-sm">Delete</a>


                    <a href="/exsubcategory/editexsubcategory?id=<%= exsubcat?.id %>"
                        class="btn btn-dark-blue btn-sm">Edit</a>
                    </td>
                    <td class="align-middle text-center text-sm">
                      <% if(exsubcat?.status==="active" ) { %>
                        <a href="/exsubcategory/changestatus?id=<%= exsubcat?.id %>&status=deactive"
                            class="btn btn-success btn-sm">
                            <%= exsubcat?.status %>
                        </a>
                        <% } else { %>
                            <a href="/exsubcategory/changestatus?id=<%= exsubcat?.id %>&status=active"
                                class="btn btn-danger btn-sm">
                                <%= exsubcat?.status %>
                            </a>
                            <% } %>
                      </button>
                    </td>
                   
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../footer') %>
